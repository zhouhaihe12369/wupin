<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="名称:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/name_et"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:paddingLeft="30dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/view" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="类别:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/type_et"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="33dp"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_forward_normal" />
                </LinearLayout>

                <include layout="@layout/view" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="主人:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/owner_type"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="33dp"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_forward_normal" />
                </LinearLayout>

                <include layout="@layout/view" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/come_ll"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_input"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="来源:"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/come_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:paddingLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="时间:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" >

                        <EditText
                            android:id="@+id/time_et"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:paddingLeft="30dp"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/time_iv"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_forward_normal" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/view" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="价值:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/price_et"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:paddingLeft="30dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/view" />

                <LinearLayout
                    android:id="@+id/address_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="地点:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/address_sp"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="33dp"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_forward_normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/come_ll"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_input"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="备注:"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/comments_et"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:paddingLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/save_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn"
                    android:text="保存"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buy_record_bt"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btns"
                    android:text="买入"
                    android:textColor="@color/light_green"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>